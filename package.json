{
  "name": "routine-planner-desktop",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm:dev:electron\"",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build:ui": "vite build",
    "build": "vite build && electron-builder --mac",
    "start": "electron ."
  },
  "dependencies": {
    "framer-motion": "^11.2.6",
    "lucide-react": "^0.439.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.7",
    "vite": "^5.4.1",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.varsha.routineplanner",
    "directories": { "output": "release" },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "artifactName": "RoutinePlanner-${version}-mac.${ext}"
    }
  }
}
